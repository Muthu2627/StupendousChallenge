<Page
    x:Class="StupendousChallenge.BlankPage4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StupendousChallenge"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Image Style="{StaticResource LogoTheme}" />
        <Image Source="https://miro.medium.com/max/1400/0*Vk-43MFofBqoTKGs.gif" Grid.Row="1"
               VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Fill"
               Height="500" Width="300" Grid.RowSpan="3"/>
        <TextBlock Grid.Row="1" Text="Order No" VerticalAlignment="Bottom"
                   Foreground="Black"
                   Style="{StaticResource PageTextTheme}"/>
        <TextBlock x:ConnectionId='2' x:Name="CompletedPageNoText" VerticalAlignment="Top" 
                   Foreground="Black" Grid.Row="2" 
                   HorizontalAlignment="Center" FontWeight="Bold"
                   Text="96" Style="{StaticResource HeaderTextBlockStyle}"/>
    </Grid>
</Page>

